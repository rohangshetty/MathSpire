<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".permutationpage">
    <EditText
        android:id="@+id/permutationeditTextN"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter value for n"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp" />

    <EditText
        android:id="@+id/permutationeditTextR"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter value for r"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/permutationeditTextN"
        android:layout_margin="16dp" />

    <Button
        android:id="@+id/permutationcalculateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        app:layout_constraintTop_toBottomOf="@+id/permutationeditTextR"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/permutationtextViewResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Result: "
        app:layout_constraintTop_toBottomOf="@+id/permutationcalculateButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/permutationstepsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Steps"
        app:layout_constraintTop_toBottomOf="@+id/permutationtextViewResult"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/permutationtextViewSteps"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Steps: "
        app:layout_constraintTop_toBottomOf="@+id/permutationstepsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:visibility="invisible" />


</androidx.constraintlayout.widget.ConstraintLayout>