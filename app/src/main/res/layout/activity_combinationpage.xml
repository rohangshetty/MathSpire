<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".combinationpage">
    <EditText
        android:id="@+id/combinationeditTextN"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter value for n"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp" />

    <EditText
        android:id="@+id/combinationeditTextR"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter value for r"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/combinationeditTextN"
        android:layout_margin="16dp" />

    <Button
        android:id="@+id/combinationcalculateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        app:layout_constraintTop_toBottomOf="@+id/combinationeditTextR"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/combinationtextViewResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Result: "
        app:layout_constraintTop_toBottomOf="@+id/combinationcalculateButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/combinationstepsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Steps"
        app:layout_constraintTop_toBottomOf="@+id/combinationtextViewResult"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/combinationtextViewSteps"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Steps: "
        app:layout_constraintTop_toBottomOf="@+id/combinationstepsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:visibility="invisible" />


</androidx.constraintlayout.widget.ConstraintLayout>